@page "/calculadora"

@rendermode InteractiveServer

<PageTitle>Calculadora</PageTitle>

<h1>Calculadora</h1>

<p>En esta sección encontrarás una calculadora básica para realizar operaciones matemáticas.</p>

<div>
    <label>Numero 1:</label>
    <input type="number" @bind="numero1"/>
</div>

<div>
    <label>Numero 2:</label>
    <input type="number" @bind="numero2"/>
</div>

<div>
    <button @onclick="sumar">Sumar</button>
    <button @onclick="restar">Restar</button>
    <button @onclick="multiplicacion">Multiplicación</button>
    <button @onclick="dividir">Dividir</button>
</div>

<div>
    <p>Resultado: @resultado</p>
</div>

@code {
    double numero1 = 0;
    double numero2 = 0;
    double resultado = 0;

    void sumar() {
        resultado = numero1 + numero2;
    }

    void restar() {
        resultado = numero1 - numero2;
    }
  
    void multiplicacion() {
        resultado = numero1 * numero2;
    }

    void dividir() {
        if (numero2 != 0) {
            resultado = numero1 / numero2;
        } else {
            resultado = double.NaN; // Manejamos la división por cero
        }
    }
}
